{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-clean-order",
    "stylelint-config-prettier-scss"
  ],
  "rules": {
    "selector-class-pattern": [
      "^([a-z][a-z0-9]*)(__[a-z0-9]+)?(_[a-z0-9]+)?$",
      {
        "resolveNestedSelectors": true
      }
    ]
  }
}
